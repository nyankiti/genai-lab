{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "traceResolution": false
  },
  "include": [
    "src/**/*",
    "apps/tech-summarizer/generatePagesArtifact.ts",
    "apps/mastra-app/src/index.ts"
  ],
  "exclude": ["node_modules"]
}
